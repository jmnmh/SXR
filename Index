    <h1>SX Injector - نسخة تجريبية</h1>
    <nav><a href="#" class="btn" id="adminBtn">Admin</a></nav>
  </header>

  <main id="list"></main>

  <footer>نسخة تجريبية — تأكد من قانونية أي ملفات تنشرها.</footer>

  <script>
    // يقرأ ملف JSON محلي (موجود في repo) ويعرض الأدوات
    fetch('data/files.json').then(r=>r.json()).then(list=>{
      const container = document.getElementById('list');
      list.forEach(tool=>{
        const div = document.createElement('div');
        div.className='tool';
        div.innerHTML = `<h2>${tool.name} <small>v${tool.version}</small></h2>
                         <p>${tool.description}</p>
                         <a class="btn" href="${tool.download}" download>تحميل</a>
                         <span style="margin-left:12px;color:#666">التحميلات: ${tool.downloads||0}</span>`;
        container.appendChild(div);
      });
    }).catch(e=>document.getElementById('list').innerText='خطأ في تحميل البيانات');
  </script>
